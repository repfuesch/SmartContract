<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="smart_contract.csg.ifi.uzh.ch.smartcontracttest">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        tools:replace="android:icon"
        android:name=".common.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".overview.ContractOverviewActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/MyTheme.Base">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.create.ContractCreateActivity"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".detail.display.ContractDetailActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".setting.SettingsActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/MyTheme" />
        <activity
            android:name=".account.AccountActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/MyTheme" />
        <activity android:name=".profile.ProfileActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".qrcode.QrScanningActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>