<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/overview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="smart_contract.csg.ifi.uzh.ch.smartcontracttest.overview.ContractOverviewActivity">

    <include
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/overview_body">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/fragment_account_balance"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:onClick="onImportFromDeviceButtonClick"
                    android:background="?android:attr/colorBackground"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_action_wifi"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:onClick="onScanButtonClick"
                    android:background="?android:attr/colorBackground"
                    android:layout_marginRight="8dp"
                    android:id="@+id/action_scan_contract"
                    android:src="@drawable/ic_action_scan_qr_code"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_add"
                    android:onClick="onAddButtonClick"
                    android:id="@+id/action_add_contract"
                    android:background="?android:attr/colorBackground"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:name="smart_contract.csg.ifi.uzh.ch.smartcontracttest.overview.ContractListFragment"
                android:id="@+id/purchase_list_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                tools:layout="@layout/fragment_purchasecontract_list" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
