<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_contract_overview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="smart_contract.csg.ifi.uzh.ch.smartcontracttest.overview.ContractOverviewActivity">

    <include
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/fragment_account_balance"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_add"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:onClick="onAddButtonClick"
            android:background="?android:attr/colorBackground"/>

    </RelativeLayout>

    <fragment
        android:name="smart_contract.csg.ifi.uzh.ch.smartcontracttest.overview.PurchaseContractFragment"
        android:id="@+id/purchase_list_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:layout="@layout/fragment_purchasecontract_list" />

</LinearLayout>
